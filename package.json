{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "start": "db-migrate up && node server.js",
    "start-compiled": "npx tsc && db-migrate up && node dist/server.js",
    "start-only": "npx tsc && node dist/server.js",
    "start-dbm": "npx tsc && db-migrate up",
    "watch": "tsc-watch --esModuleInterop ./src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "test-ts": "jasmine-ts",
    "test": "npx tsc && db-migrate --env test up && set ENV=test && jasmine",
    "test:drop": "npx tsc && db-migrate --env test up && set ENV=test && jasmine && db-migrate --env test reset",
    "build": "npx tsc",
    "jasmine": "jasmine",
    "zip": "rm -rf dist && npm run build && cp -r package.json database.json tsconfig.json migrations sslcerts dist/ && cd dist && zip -r -D ../app.zip *"
  },
  "author": "Daniel Leutwyler",
  "license": "ISC",
  "dependencies": {
    "@types/debug": "^4.1.8",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^2.0.12",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.13",
    "db-migrate-pg": "^1.3.0",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.1",
    "pg": "^8.5.1",
    "sharp": "^0.32.5",
    "supertest": "^6.3.3",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.10.11",
    "@types/pg": "^7.14.7",
    "cross-env": "^7.0.3",
    "jasmine": "^3.99.0",
    "jasmine-spec-reporter": "^6.0.0",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9"
  }
}
